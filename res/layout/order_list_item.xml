<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/order_list_item_orderNum"
        style="@style/order_list_item"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:paddingLeft="10dip" />

    <TextView
        android:id="@+id/order_list_item_orderUuid"
        style="@style/order_list_item"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:paddingLeft="10dip" />

    <TextView
        android:id="@+id/order_list_item_status"
        style="@style/order_list_item"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:paddingLeft="10dip" />

    <TextView
        android:id="@+id/order_list_item_date"
        style="@style/order_list_item"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:paddingLeft="10dip" />

    <TextView
        android:id="@+id/order_list_item_price"
        style="@style/order_list_item"
        android:layout_weight="0.2"
        android:paddingLeft="10dip" />

</LinearLayout>