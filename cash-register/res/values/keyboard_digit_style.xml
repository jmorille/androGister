<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

     <dimen name="screen_text_size">40sp</dimen>
     <dimen name="screen_layout_height">60dp</dimen>
     
    <dimen name="digit_text_size">40sp</dimen>
    <dimen name="digit_layout_width">60dp</dimen>
    <dimen name="digit0_layout_width">90dp</dimen>

    <style name="digit_screen_style">
        <item name="android:textSize">@dimen/digit_text_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:focusable">false</item> 
        <item name="android:textIsSelectable">false</item>
        <item name="android:gravity">center_vertical|right</item> 
    </style>

    <style name="digit_button_style" parent="@android:style/Widget.Holo.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textSize">@dimen/digit_text_size</item>
        <item name="android:layout_width">@dimen/digit_layout_width</item>
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:shadowRadius">0.8</item>
        <item name="android:layout_margin">0dp</item>
    </style>

    <style name="operation_button_style" parent="digit_button_style"></style>

</resources>